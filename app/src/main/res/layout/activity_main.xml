<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Window Element -->

    <fragment
        android:id="@+id/id_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <Button
        android:id="@+id/zoom_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:onClick="zoomInToCurrentLocation"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />
    <ImageButton
        android:id="@+id/buttonIncreaseRadius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/zoom_button"
        android:layout_alignTop="@id/zoom_button"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_input_add" />

    <!-- - Button to decrease radius -->
    <ImageButton
        android:id="@+id/buttonDecreaseRadius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/zoom_button"
        android:layout_alignTop="@id/zoom_button"
        android:layout_marginStart="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_delete" />

    <FrameLayout
        android:id="@+id/window_layout"
        android:layout_width="match_parent"
        android:layout_height="432dp"

        android:layout_below="@+id/id_map"
        android:layout_marginTop="-1dp"
        android:background="@android:color/white"
        android:visibility="gone">
        <!--android:layout_below="@id/map_fragment"-->
        <!-- Add your content for the window here -->
    </FrameLayout>

    <Button
        android:id="@+id/profile_button"
        android:layout_width="141dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="13dp"
        android:text="Profile" />

</RelativeLayout>